<div class="row">
  <div class="well span3">
    <%= simple_form_for :login do |f| %>
      <%= f.input :email, label: false, placeholder: "Email" %>
      <%= f.input :password, label: false, placeholder: "Password" %>
      <%= f.submit "Login", class: "btn pull-right" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="span3">
    <%= link_to "← Back to DesignaBlog!", :root %>
  </div>
</div>

<table class="table">
  <tr>
    <td>Usuário</td>
    <td>Senha</td>
  </tr>
    <% User.all.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.password %></td>
    </tr>
    <% end %>
</table>