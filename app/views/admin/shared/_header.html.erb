    <div class="navbar navbar-inverse">
        <div class="navbar-inner">
            <div class="container">

                <%= content_tag :span, "Designa Blog", class: "logo" %>

                <!-- profile bar -->
                <ul class="profileBar">
                    <li class="user visible-desktop"><%= image_tag "http://graph.facebook.com/#{@user.facebook}/picture" if @user.facebook %></li>
                    <li class="profile">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#"><%= @user.name %> <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <%= content_tag :li, (link_to "Link", "#") %>
                            <%= content_tag :li, (link_to "Link", "#") %>
                            <%= content_tag :li, (link_to "Link", "#") %>
                            <li class="divider"></li>
                            <%= content_tag :li, (link_to "Logout", :admin_logout, method: :delete) %>
                        </ul>
                    </li>
                    <li class="notify"><a href="#"><span>2</span></a></li>
                    <li class="calendar"><a href="#"></a></li>
                    <li class="mail"><a href="#"></a><span class="attention">!</span></li>
                </ul>
            </div>
        </div>
    </div>
