<%= link_to "New User", :admin_new_user %>
<table class="table">
  <tr>
    <%= content_tag :th, "#" %>
    <%= content_tag :th, "User Name" %>
    <%= content_tag :th, "Email" %>
    <%= content_tag :th, "Number of Posts" %>
    <%= content_tag :th, "Edit" %>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <%= content_tag :td, (image_tag "http://graph.facebook.com/#{user.facebook}/picture") if user.facebook %>
      <%= content_tag :td, user.name %>
      <%= content_tag :td, user.email %>
      <%= content_tag :td, user.posts.count %>
      <%= content_tag :td, "Edit" %>
    </tr>
  <% end %>
</table>