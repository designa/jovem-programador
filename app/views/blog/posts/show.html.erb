<div class="single-post">
  <div class="page-header">
    <h2>
      <%= @post.title %>
      <small>by  <%= link_to @post.user.name, nil %></small>
    </h2>
    <i class="icon-comment"></i>
    <fb:comments-count href='<%= blog_post_url(@post)%>'></fb:comments-count>
    <%= link_to ("Comments"), "#comments".html_safe %> |
    <%= show_post_categories(@post) %>
  </div>
  <div class="post-content">
    <%= simple_format(@post.full_text) %>
  </div>
  <div class="page-header">
    <h2>
      <%= content_tag :a, "Comments", id: "comments" %>
    </h2>
  </div>
  <div class="fb-comments" data-href="<%= blog_post_url(@post) %>" data-width="770" data-num-posts="10"></div>
</div>