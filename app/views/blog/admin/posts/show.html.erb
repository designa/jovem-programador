<div class="container post-page">
  <div class="row page-header">
    <div class="span12">
      <h1>
      <%= @post.title %>
      </h1>
      Escrito por: <strong><%= @post.author %></strong> Ã s <%= l(@post.created_at) %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span9">
      <%= simple_format(@post.content) %>
    </div>
    <div class="span3 sidebar pull-right">
      <%= link_to "Voltar para posts", blog_posts_path, class: "btn btn-darkblue btn-block" %>
      <%= link_to "Editar", blog_post_edit_path(@post), class: "btn btn-darkblue btn-block" %>
      <%= link_to "Exlcluir", blog_post_delete_path(@post), class: "btn btn-darkblue btn-block" %>
    </div>
  </div>
</div>